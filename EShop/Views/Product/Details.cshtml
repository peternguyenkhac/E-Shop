@model EShop.Models.Product

<div class="card mb-3 rounded">
    <div class="card-body">
        <ol class="breadcrumb float-left">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Catalog" asp-action="GetProductsByCategory" asp-route-categoryId="@ViewBag.Category.Id">@ViewBag.Category.Name</a></li>
            <li class="breadcrumb-item"><a href="#">@Model.Name</a></li>
        </ol>
    </div>
</div>

<div class="bg-white p-3 rounded">
    <div class="row">
        <aside class="col-md-6">
            <div class="card rounded">
                <article class="gallery-wrap">
                    <div class="img-big-wrap m-0">
                        <div> <a href="#"><img src="@Model.Image"></a></div>
                    </div> <!-- slider-product.// --><!-- gallery-wrap .end// -->
            </div> <!-- card.// -->
        </aside>
        <main class="col-md-6">
            <article class="product-info-aside">

                <h2 class="title mt-3 mb-3"> @Model.Name </h2>

                <p>
                    @Model.Description
                </p>

                <div class="mt-3 mb-3">
                    <var class="text-danger price h4">@Model.Price VND</var>
                </div> <!-- price-detail-wrap .// -->

                <div class="form-row  mt-4">
                    <div class="form-group col-md flex-grow-0">
                        <div class="input-group mb-3 input-spinner">
                            <input id="product-quantity" type="number" class="form-control" value="1" min="1" max="99">
                        </div>
                    </div> <!-- col.// -->
                    <div class="form-group col-md">
                        <button href="#" class="btn  btn-outline-primary" onclick="AddProductToCart(@Model.Id)">
                            <i class="fas fa-shopping-cart"></i> <span class="text">Add to cart</span>
                        </button>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->

            </article> <!-- product-info-aside .// -->
        </main> <!-- col.// -->
    </div> <!-- row.// -->
</div>